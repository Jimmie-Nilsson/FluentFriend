<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LocationSuggestion">

    <TextView
            android:layout_width="234dp"
            android:layout_height="66dp" android:id="@+id/CommonInterestsTextView"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/UserInfoTextView"
            app:layout_constraintStart_toEndOf="@+id/UserInfoTextView"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.0"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/textview_border" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="223dp"
            android:layout_height="165dp" android:id="@+id/resultTextView"
            android:background="@drawable/textview_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.738"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" android:textSize="16sp"/>
    <Button
            android:text="Show in Goole Maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/open_google_maps"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userInfoBottomTextView"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Find Nearby places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/find_nearby_places"
            android:layout_marginBottom="12dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.551"/>
    <TextView
            android:text="Common interests:"
            android:layout_width="102dp"
            android:layout_height="61dp" android:id="@+id/UserInfoTextView"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="240dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.054"/>
    <ImageView
            android:layout_width="157dp"
            android:layout_height="160dp" app:srcCompat="@drawable/_2ae7a8c6_9328_4e1b_a103_a5c78411f551"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="69dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/CommonInterestsTextView"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="You matched!"
            android:layout_width="214dp"
            android:layout_height="44dp" android:id="@+id/youMatched"
            android:textSize="34sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Here you can find nearby places to meet based on what you both like!"
            android:layout_width="216dp"
            android:layout_height="57dp" android:id="@+id/textView7"
            android:gravity="center"
            android:layout_marginTop="4dp"
            app:layout_constraintVertical_bias="0.461" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp"/>
    <TextView
            android:text="Or click here if you want to see all nearby suitable locations:"
            android:layout_width="193dp"
            android:layout_height="60dp" android:id="@+id/userInfoBottomTextView"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.906" app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>