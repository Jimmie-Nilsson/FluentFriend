<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LocationSuggestion">

    <TextView
            android:layout_width="234dp"
            android:layout_height="66dp" android:id="@+id/CommonInterestsTextView"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="232dp" app:layout_constraintStart_toEndOf="@+id/UserInfoTextView"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="188dp"
            android:layout_height="87dp" android:id="@+id/resultTextView"
            app:layout_constraintBottom_toTopOf="@+id/open_google_maps"
            app:layout_constraintTop_toBottomOf="@+id/UserInfoTextView" app:layout_constraintVertical_bias="0.511"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Open google maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/open_google_maps"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/userInfoBottomTextView"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="Find Nearby places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/find_nearby_places"
            app:layout_constraintBottom_toTopOf="@+id/resultTextView"
            android:layout_marginBottom="12dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="You both like: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/UserInfoTextView"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="234dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/CommonInterestsTextView" android:layout_marginEnd="1dp"
    />
    <ImageView
            android:layout_width="157dp"
            android:layout_height="160dp" app:srcCompat="@drawable/_2ae7a8c6_9328_4e1b_a103_a5c78411f551"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="69dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/CommonInterestsTextView"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="You matched!"
            android:layout_width="214dp"
            android:layout_height="44dp" android:id="@+id/youMatched"
            android:textSize="34sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Press this button to get suggestions on where to meet based on your common interests: "
            android:layout_width="214dp"
            android:layout_height="70dp" android:id="@+id/textView7"
            android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/UserInfoTextView"
            android:layout_marginTop="4dp" app:layout_constraintBottom_toTopOf="@+id/find_nearby_places"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.502"/>
    <TextView
            android:text="Or press this button to find nearby places yourself:"
            android:layout_width="193dp"
            android:layout_height="43dp" android:id="@+id/userInfoBottomTextView"
            android:textSize="16sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/resultTextView"
            android:layout_marginTop="88dp" app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintBottom_toTopOf="@+id/open_google_maps" app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>