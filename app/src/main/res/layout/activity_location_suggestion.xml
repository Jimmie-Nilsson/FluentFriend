<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LocationSuggestion">

    <TextView
            android:id="@+id/place_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="87dp" android:layout_marginBottom="201dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/find_nearby_places"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="216dp"
            android:layout_height="0dp" android:id="@+id/resultTextView"
            app:layout_constraintTop_toBottomOf="@+id/open_google_maps"
            android:layout_marginBottom="138dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Open google maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/open_google_maps"
            app:layout_constraintStart_toStartOf="@+id/resultTextView"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/find_nearby_places" android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toTopOf="@+id/resultTextView"/>
    <Button
            android:text="Find Nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/find_nearby_places"
            app:layout_constraintTop_toBottomOf="@+id/place_name_text_view"
            android:layout_marginEnd="24dp" android:layout_marginBottom="40dp"
            app:layout_constraintEnd_toEndOf="@+id/open_google_maps"
            app:layout_constraintBottom_toTopOf="@+id/open_google_maps"/>
</androidx.constraintlayout.widget.ConstraintLayout>