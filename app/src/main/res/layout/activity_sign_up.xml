<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUp"
        android:background="#BDE3FF"
        android:clickable="false">


    <TextView
            android:text="Sign up"
            android:textSize="32dp"
            android:textAlignment="center"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/signup_TitleText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="71dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="47dp"
            android:id="@+id/signup_FirstName"
            android:backgroundTint="@color/white"
            android:background="@color/black" android:autoText="false"
            android:hint="First name*"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/signup_TitleText"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:id="@+id/signup_LastName"
            android:backgroundTint="@color/white"
            android:background="@color/black" android:autoText="false"
            android:hint="Last name *"
            app:layout_constraintStart_toStartOf="@+id/signup_FirstName"
            app:layout_constraintTop_toBottomOf="@+id/signup_FirstName"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:id="@+id/signup_Email"
            android:backgroundTint="@color/white"
            android:background="@color/black" android:autoText="false"
            android:hint="Email*"
            app:layout_constraintStart_toStartOf="@+id/signup_LastName"
            app:layout_constraintTop_toBottomOf="@+id/signup_LastName"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:id="@+id/signup_Password"
            android:backgroundTint="@color/white"
            android:background="@color/black" android:autoText="false"
            android:hint="Password*"
            app:layout_constraintStart_toStartOf="@+id/signup_Email"
            app:layout_constraintTop_toBottomOf="@+id/signup_Email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:id="@+id/signup_RepeatPassword"
            android:backgroundTint="@color/white"
            android:background="@color/black" android:autoText="false"
            android:hint="Repeat Password*"
            app:layout_constraintStart_toStartOf="@+id/signup_Password"
            app:layout_constraintTop_toBottomOf="@+id/signup_Password"/>
    <Button
            android:id="@+id/signup_btnSignUp"
            android:layout_width="203dp"
            android:layout_height="0dp"
            android:text="Sign Up"
            android:padding="10dp"
            android:background="@drawable/mybutton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>