<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@drawable/signupnewlogo"
        android:clickable="false">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textStyle="bold"
            android:ems="10"
            android:padding="10dp"
            android:id="@+id/signup_FirstName"
            android:background="@drawable/rounded_edittext" android:autoText="false"
            android:hint="First name*"
            app:layout_constraintTop_toBottomOf="@+id/signup_TitleText" android:layout_marginBottom="51dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/signup_LastName"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textStyle="bold"
            android:ems="10"
            android:padding="10dp"
            android:id="@+id/signup_Email"
            android:background="@drawable/rounded_edittext" android:autoText="false"
            android:hint="Email*"
            app:layout_constraintStart_toStartOf="@+id/signup_LastName"
            app:layout_constraintTop_toBottomOf="@+id/signup_LastName" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/signup_Password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:ems="10"
            android:padding="10dp"
            android:id="@+id/signup_RepeatPassword"
            android:background="@drawable/rounded_edittext" android:autoText="false"
            android:hint="Repeat Password*"
            app:layout_constraintStart_toStartOf="@+id/signup_Password"
            app:layout_constraintTop_toBottomOf="@+id/signup_Password" android:layout_marginBottom="55dp"
            app:layout_constraintBottom_toTopOf="@+id/signup_btnSignUp"/>
    <Button
            android:id="@+id/signup_btnSignUp"
            android:layout_width="203dp"
            android:layout_height="0dp"
            android:text="Sign Up"
            android:elevation="30dp"
            android:padding="10dp"
            android:background="@drawable/mybutton"
            app:layout_constraintTop_toBottomOf="@+id/signup_RepeatPassword" android:layout_marginBottom="61dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textStyle="bold"
            android:ems="10"
            android:padding="10dp"
            android:id="@+id/signup_LastName"
            android:background="@drawable/rounded_edittext" android:autoText="false"
            android:hint="Last name *"
            app:layout_constraintStart_toStartOf="@+id/signup_FirstName"
            app:layout_constraintTop_toBottomOf="@+id/signup_FirstName" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/signup_Email"/>
    <TextView
            android:text="Sign up"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:shadowColor="@color/text_shadow_white"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/signup_TitleText"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="28dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/signup_FirstName" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:ems="10"
            android:padding="10dp"
            android:id="@+id/signup_Password"
            android:background="@drawable/rounded_edittext" android:autoText="false"
            android:hint="Password*"
            app:layout_constraintStart_toStartOf="@+id/signup_Email"
            app:layout_constraintTop_toBottomOf="@+id/signup_Email" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/signup_RepeatPassword"/>


</androidx.constraintlayout.widget.ConstraintLayout>