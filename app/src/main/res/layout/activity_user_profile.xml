                        android:text="Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/maleRadioButton"
                />
                <RadioButton
                        android:text="Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/femaleRadioButton"
                />
                <RadioButton
                        android:text="Other / Private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/otherRadioButton"
                />
            </RadioGroup>
            <EditText
                    android:layout_width="333dp"
                    android:layout_height="197dp"
                    android:inputType="text"
                    android:text="Biography..."
                    android:ems="10"
                    android:id="@+id/bioEditTextText"
                    tools:layout_editor_absoluteY="579dp" tools:layout_editor_absoluteX="46dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>