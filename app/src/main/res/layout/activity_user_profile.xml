<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfile" android:background="#BDE3FF" android:clickable="false"
>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:orientation="vertical"
                                                           android:id="@+id/linearLayout">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/displayUserNameTextView"
                    android:textSize="24sp"
                    android:text="displayUserName"
                    tools:layout_editor_absoluteY="310dp" tools:layout_editor_absoluteX="165dp"/>
            <AutoCompleteTextView
                    android:text="I want to learn..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/languesWantToLearnTextView"
                    tools:layout_editor_absoluteY="478dp" tools:layout_editor_absoluteX="44dp"/>
            <TextView
                    android:text="Profile Settings"
                    android:textSize="20dp"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2"
                    tools:layout_editor_absoluteY="41dp" tools:layout_editor_absoluteX="155dp"/>
            <CheckBox
                    android:text="MUSEUM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkBox6"
                    tools:layout_editor_absoluteY="860dp" tools:layout_editor_absoluteX="211dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/__d2fc14ee_1f91_42de_97ae_da627959daaa_2"
