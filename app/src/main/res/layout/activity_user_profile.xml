<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfilePage" android:background="#BDE3FF" android:clickable="false"
>


    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:orientation="vertical"
                                                           android:id="@+id/linearLayout">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/displayUserNameTextView"
                    android:textSize="24sp"
                    android:text="displayUserName"
                    tools:layout_editor_absoluteY="290dp" tools:layout_editor_absoluteX="177dp"/>
            <AutoCompleteTextView
                    android:text="I want to learn..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/languesWantToLearnTextView"
                    tools:layout_editor_absoluteY="465dp" tools:layout_editor_absoluteX="46dp"/>
            <TextView
                    android:text="Profile Settings"
                    android:textSize="20dp"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2"
                    tools:layout_editor_absoluteY="30dp" tools:layout_editor_absoluteX="129dp"/>
            <CheckBox
                    android:text="MUSEUM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/museumCheckBox"
                    tools:layout_editor_absoluteY="860dp" tools:layout_editor_absoluteX="211dp"/>
            <CheckBox
                    android:text="CITY WALK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cityWalksCheckBox"
                    tools:layout_editor_absoluteY="860dp" tools:layout_editor_absoluteX="44dp"/>
            <CheckBox
                    android:text="BAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/barCheckBox"
                    tools:layout_editor_absoluteY="935dp" tools:layout_editor_absoluteX="44dp"/>
            <CheckBox
                    android:text="FIKA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/fikaCheckBox"
                    tools:layout_editor_absoluteY="935dp" tools:layout_editor_absoluteX="211dp"/>
            <TextView
                    android:text="My interests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteY="790dp" tools:layout_editor_absoluteX="46dp"/>
            <TextView
                    android:text="About me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteY="539dp" tools:layout_editor_absoluteX="46dp"/>
            <TextView
                    android:text="User name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/userNameTextView"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteY="290dp" tools:layout_editor_absoluteX="44dp"/>
            <AutoCompleteTextView
                    android:text="I speak..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/languesSpokenTextView"
                    tools:layout_editor_absoluteY="396dp" tools:layout_editor_absoluteX="44dp"/>
            <Button
                    android:id="@+id/saveSettingsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVE SETTINGS"
                    android:background="@drawable/mybutton"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteY="977dp" tools:layout_editor_absoluteX="127dp"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline3"
                                                        android:orientation="vertical"
                                                        app:layout_constraintGuide_end="431dp"/>
            <EditText
                    android:layout_width="333dp"
                    android:layout_height="197dp"
                    android:inputType="text"
                    android:text="Biography..."
                    android:ems="10"
                    android:id="@+id/bioEditText"
                    tools:layout_editor_absoluteY="579dp" tools:layout_editor_absoluteX="46dp"/>
            <ImageView
                    android:layout_width="178dp"
                    android:layout_height="179dp" app:srcCompat="@drawable/_60152224_acb6_4f98_a275_c9d7e1cae641"
                    android:id="@+id/imageView" tools:layout_editor_absoluteY="75dp"
                    tools:layout_editor_absoluteX="107dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" android:layout_marginBottom="731dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>