                    android:baselineAligned="false"
                    tools:layout_editor_absoluteY="80dp" tools:layout_editor_absoluteX="114dp"/>
            <CheckBox
                    android:text="CITY WALK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkBox5"
                    tools:layout_editor_absoluteY="860dp" tools:layout_editor_absoluteX="44dp"/>
            <CheckBox
                    android:text="BAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkBox4"
                    tools:layout_editor_absoluteY="935dp" tools:layout_editor_absoluteX="44dp"/>
            <CheckBox
                    android:text="FIKA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkBox"
                    tools:layout_editor_absoluteY="935dp" tools:layout_editor_absoluteX="211dp"/>
            <TextView
                    android:text="My interests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteY="790dp" tools:layout_editor_absoluteX="46dp"/>
            <TextView
                    android:text="About me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteY="539dp" tools:layout_editor_absoluteX="46dp"/>
            <TextView
                    android:text="User name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/userNameTextView"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteY="310dp" tools:layout_editor_absoluteX="45dp"/>
            <TextView
                    android:text="Gender:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/genderTextView"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteY="342dp" tools:layout_editor_absoluteX="45dp"/>
            <AutoCompleteTextView
                    android:text="I speak..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/languesSpokenTextView"
                    tools:layout_editor_absoluteY="434dp" tools:layout_editor_absoluteX="45dp"/>
            <Button
                    android:id="@+id/btn_prfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
