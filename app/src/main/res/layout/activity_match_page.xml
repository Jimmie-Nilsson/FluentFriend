<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MatchPage">

    <Button
            android:id="@+id/matchmatchPageBtnCalcDistance"
            android:layout_width="297dp"
            android:layout_height="0dp"
            android:text="Get distance between users"
            android:background="@drawable/mybutton"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/matchPageText2"
            android:layout_marginBottom="167dp" app:layout_constraintBottom_toTopOf="@+id/matchPageText"/>
    <TextView
            android:text="TextView"
            android:layout_width="318dp"
            android:layout_height="137dp"
            android:id="@+id/matchPageText2"
            android:textAllCaps="true" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="86dp" android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toTopOf="@+id/matchmatchPageBtnCalcDistance"/>
    <Button
            android:id="@+id/matchPageBtn"
            android:layout_width="297dp"
            android:layout_height="0dp"
            android:text="Get the location"
            android:background="@drawable/mybutton"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/matchPageText" android:layout_marginBottom="41dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="303dp"
            android:layout_height="120dp"
            android:id="@+id/matchPageText"
            android:textAllCaps="true" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.472"
            app:layout_constraintTop_toBottomOf="@+id/matchmatchPageBtnCalcDistance" android:layout_marginBottom="58dp"
            app:layout_constraintBottom_toTopOf="@+id/matchPageBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>