<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MatchPage">

    <Button
            android:id="@+id/matchmatchPageBtnDecline"
            android:layout_width="150dp"
            android:layout_height="63dp"
            android:text="Decline"
            android:background="@drawable/declinebutton"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/matchmatchPageBtnAccept"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/matchmatchPageBtnAccept"
            app:layout_constraintBottom_toBottomOf="@+id/matchmatchPageBtnAccept" android:layout_marginEnd="29dp"
    />
    <Button
            android:id="@+id/matchmatchPageBtnAccept"
            android:layout_width="153dp"
            android:layout_height="56dp"
            android:text="Accept"
            android:background="@drawable/acceptbutton"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/matchPageText"
            app:layout_constraintEnd_toStartOf="@+id/matchmatchPageBtnDecline" android:layout_marginBottom="34dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="47dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="372dp"
            android:layout_height="239dp"
            android:id="@+id/matchPageText"
            android:textAllCaps="true" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="246dp" android:layout_marginBottom="222dp"
            app:layout_constraintBottom_toTopOf="@+id/matchmatchPageBtnAccept"/>
</androidx.constraintlayout.widget.ConstraintLayout>